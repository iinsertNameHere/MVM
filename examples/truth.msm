; Classic Truth-machine example
%include "../msmlib/stdlib.mlb"

jmp main

; Truth value (can only be 1 or 0)
; 1 = True
; 0 = False
%define T 0

truth:
    swap 1 ; Swap return addr to the bottom of the stack
truth_loop:
    ; Printing T
    dup 0
    int print_i64
    dup 0

    ; jmp if T is 1
    ; else return
    jmpif truth_loop
    drop
    ret

main:
    push T
    call truth
    hlt